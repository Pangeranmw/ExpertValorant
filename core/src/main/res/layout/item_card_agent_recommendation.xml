<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="160dp"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="10dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="95dp"
        android:id="@+id/rect_ability_outer"
        android:layout_height="100dp"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp"
        app:shapeAppearanceOverlay="@style/CornerCutTopRight"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="100dp"
        android:id="@+id/rect_ability_large"
        android:translationY="5dp"
        android:translationX="5dp"
        android:layout_height="100dp"
        android:background="@color/white"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp"
        app:shapeAppearanceOverlay="@style/CornerCutTopRight"
        />
    <ImageView
        android:contentDescription="@string/imageview"
        android:id="@+id/img_bg"
        android:translationY="5dp"
        android:translationX="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingHorizontal="10dp"
        android:alpha="0.5"
        app:tint="@color/black"
        android:scaleType="fitCenter"
        tools:src="@drawable/background_1"
        />
    <ImageView
        android:contentDescription="@string/imageview"
        android:id="@+id/img_agent"
        android:translationY="5dp"
        android:translationX="5dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/rect_ability_large"
        android:scaleType="centerCrop"
        android:backgroundTint="@color/orange"
        tools:src="@drawable/art"
        />
    <TextView
        android:translationY="5dp"
        android:translationX="5dp"
        android:id="@+id/tv_agent_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        tools:text="Agent Name"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_below="@+id/rect_ability_large"
        android:fontFamily="@font/monumentextended_regular"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>