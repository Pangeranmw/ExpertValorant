<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:id="@+id/rect_ability_large"
            android:layout_height="150dp"
            android:background="@color/white"
            android:alpha="0.6"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"
            app:shapeAppearanceOverlay="@style/CornerCutTopRight"
            />
        <ImageView
            android:id="@+id/img_ability"
            android:contentDescription="@string/imageview"
            android:layout_width="60dp"
            android:layout_marginBottom="10dp"
            android:layout_height="70dp"
            android:scaleType="fitEnd"
            app:tint="@color/black"
            tools:src="@tools:sample/avatars"
            android:layout_alignBottom="@+id/rect_ability_large"
            android:layout_alignStart="@+id/rect_ability_large"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/tv_ability_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            tools:text="Skill Name"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/monumentextended_regular"
            android:layout_below="@+id/rect_ability_large"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/rect_ability_small"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/tv_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/c"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/white"
            />
    </RelativeLayout>
</FrameLayout>